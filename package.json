{
  "name": "fitme",
  "version": "0.0.3",
  "description": "FitMe - Fitness management made easy",
  "author": "Tyler Knipfer <knipferrc@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start":
      "concurrently \"bsb -make-world -w\" \"cross-env NODE_ENV=development nodemon --verbose server\"",
    "build": "bsb -make-world && parcel build index.html --public-url /",
    "start:prod": "cross-env NODE_ENV=production node server",
    "clean": "bsb -clean-world",
    "precommit": "lint-staged",
    "format:css": "prettier --write ./*.css ./**/*.css",
    "format:js": "prettier --write ./*.{js,json} ./**/*.{js,json}",
    "format:reason": "refmt --in-place src/**/*.re",
    "format": "npm run format:js && npm run format:css && npm run format:reason"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knipferrc/fitme.git"
  },
  "bugs": {
    "url": "https://github.com/knipferrc/fitme/issues"
  },
  "keywords": ["reason-react", "reason", "fitme", "ocaml"],
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "autoprefixer": "^7.2.5",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-tools": "^2.18.0",
    "helmet": "^3.9.0",
    "hpp": "^0.2.2",
    "reason-react": "^0.3.1"
  },
  "devDependencies": {
    "bs-platform": "^2.1.0",
    "bsb-js": "^1.0.2",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.14.11",
    "parcel-bundler": "^1.4.1",
    "prettier": "^1.10.2"
  },
  "lint-staged": {
    "*.{js,json}": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "git add"],
    "src/**/*.re": ["refmt --in-place", "git add"]
  },
  "nodemonConfig": {
    "ignore": ["dist/*"]
  }
}
